@page "/providers"
@inject HttpClient Http
@inject Backend Backend
@inject ILogger<Backend> Logger

<div class="page">
    <h1>Источники данных</h1>



    @if (_serverResponse == null)
    {
        <p><em>Загрузка...</em></p>
    }
    else
    {
        if (!_serverResponse.Success)
        {
            <p><em>Не удалось загрузить: @_serverResponse.ErrorText </em></p>
        }
        else
        {
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <th>Название</th>
                        <th>Тип</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var provider in _serverResponse.Response)
                    {
                        <tr>
                            <td class="trim-td">@provider.Title</td>
                            <td class="trim-td">@provider.DataProviderType</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <button class="btn btn-primary"
                @onclick="@(e => UpdateReport())">
            Обновить
        </button>

    }
</div>

@code {
    private ServerResponse<List<DataProviderConfiguration>> _serverResponse;

    protected override async Task OnInitializedAsync()
    {
        UpdateReport();
    }

    private async void UpdateReport()
    {
        _serverResponse = null;
        _serverResponse = await Backend.GetAsync<List<DataProviderConfiguration>>("http://localhost:64460/api/providers");
        StateHasChanged();
    }
}

